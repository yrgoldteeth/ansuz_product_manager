<% form_for :user_information, :url => '/carts/checkout' do |f| %>
  <%= form_heading "Name", f.text_field(:name) -%>
  <%= form_heading "Phone", f.text_field(:phone_number) -%>
  <%= form_heading "Email Address", f.text_field(:email_address) -%>
  <%= form_heading "Billing Address 1", f.text_field(:shipping_line1) -%>
  <%= form_heading "Billing Address 2", f.text_field(:billing_line2) -%>
  <%= form_heading "Billing City", f.text_field(:billing_city) -%>
  <%= form_heading "Billing State", f.text_field(:billing_state_province) -%>
  <%= form_heading "Billing Zip", f.text_field(:billing_zip_postal) -%>
  <%= form_heading "Shipping Address 1", f.text_field(:shipping_line1) -%>
  <%= form_heading "Shipping Address 2", f.text_field(:shipping_line2) -%>
  <%= form_heading "Shipping City", f.text_field(:shipping_city) -%>
  <%= form_heading "Shipping State", f.text_field(:shipping_state_province) -%>
  <%= form_heading "Shipping Zip", f.text_field(:shipping_zip_postal) -%>
  <%= submit_tag("Add User Information") %>
<% end %>

