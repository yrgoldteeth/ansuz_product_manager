= render :partial => 'checkout_header'
- shipping_address = @cart.shipping_address
- billing_address = @cart.billing_address
%h2.cart-head Order Confirmation
- form_for :billing, @billing_address, :url => { } do |f|
  %p.cart-body 
    %strong
      PLEASE REVIEW YOUR PURCHASE INFORMATION AND CONFIRM BELOW
    %br
    Processing your order may take a moment, please click 'Submit Order' once. 
    %br 
  %table.cart
    %thead
      %tr
        %th
          SHIPPING ADDRESS
        %th
          BILLING ADDRESS
        %th
          PAYMENT INFO
    %tbody
      %tr
        %td
          - if shipping_address
            = render :partial => 'shared/address', :object => shipping_address
            .change_info
              = link_to "Change Shipping Address", { :controller => 'carts', :action => 'checkout', :step => 1 }
        %td
          - if billing_address
            = render :partial => 'shared/address', :object => billing_address
            .change_info
              = link_to "Change Billing Address", { :controller => 'carts', :action => 'checkout', :step => 2 }
        %td
          = @active_merchant_credit_card.type.capitalize
          %br
          xxxx xxxx xxxx
          = @active_merchant_credit_card.number[-4..-1]
          %br
          = "#{@active_merchant_credit_card.month}/#{@active_merchant_credit_card.year}"
          %br
          .change_info
            = link_to "Change Payment Info", { :controller => 'carts', :action => 'checkout', :step => 4 }
  .clear
  #summary
    #cart.confirm
      %h2.cart-head
        ORDER SUMMARY
      - if @cart.line_items.any?
        = render :partial => 'table2', :locals => { :cart => @cart }
      - else
        %p
          Your cart is currently empty.  
  %h3.cart-head
    SHIPPING METHOD
  %table.cart
    %tbody
      %tr
        %td{ :rowspan => '2', :class => 'info-data'}
          %h4.style-label
            Shipping To:
          %h5
            = @cart.shipping_address.country
          %br.clear
          %h4.style-label
            Method:
          %ul.shipping-select
            %li
              %span
                = Cart::SHIPPING_LOOKUP[@cart.shipping_method]
              %br.clear
          %br.clear
          = link_to "Edit Shipping Method", { :controller => 'carts', :action => 'checkout', :step => 3 }
      %tr
        %td.shipping-sub{ :rowspan => 2 }
          Shipping
          %span#shipping-rate
            = number_to_currency @cart.shipping_rate
  .shipping-grand
    GRAND TOTAL
    %span#grand-total
      = number_to_currency @cart.total
  .clear
  %p.cart-body.bottom-notice 
    %strong
      PLEASE REVIEW YOUR PURCHASE INFORMATION AND CONFIRM BELOW
    %br
    Processing your order may take a moment, please click 'Submit Order' once. 
    %br 
  - fields_for :active_merchant_credit_card, @active_merchant_credit_card do |c|
    = c.hidden_field :type
    = c.hidden_field :number
    = c.hidden_field :month
    = c.hidden_field :year
    = c.hidden_field :verification_value
    = hidden_field_tag :step, 6
    %span.fright
      = image_submit_tag 'submit-order.png', :class => 'custom-buttons'
    %br.clear
- @javascript_array << javascript_include_tag('checkout_confirm')
