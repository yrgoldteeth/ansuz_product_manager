%h2
  Order #
  = @cart.invoice_number
%h3
  Status: 
  = @cart.status

- shipping_address = @cart.shipping_address
- billing_address = @cart.billing_address
.clear
.top_addresses
  .span-7.address-block.module
    %h5.shop-heading SHIPPING ADDRESS
    .solid-divider
    %span.internal-height
      - if shipping_address
        = render :partial => 'shared/address', :object => shipping_address
  .span-7.address-block.module
    %h5.shop-heading BILLING ADDRESS
    .solid-divider
    %span.internal-height
      - if billing_address
        = render :partial => 'shared/address', :object => billing_address
.clear
%br

%table.subdued
  %thead
    %th IMAGE
    %th DESCRIPTION
    %th.number PRICE 
    %th.number QTY 
    %th.number SUBTOTAL
  %tbody
    - @cart.line_items.each do |line_item|
      = row_for_line_item(line_item, :include_actions => false)
.summary
  - %w(subtotal shipping_rate rush_rate total).each do |field|
    - value = @cart.send(field)
    - if value
      %p
        %b= field.humanize + ":"
        = number_to_currency(value)
.clear
